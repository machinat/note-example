{
  "name": "note-machina",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./lib ./dist",
    "lint": "eslint --ext .ts --ext .js --ext .tsx ./src",
    "migrate": "node -r dotenv/config ./lib/cli/migrate.js",
    "test": "jest",
    "build": " npm run build:webview && npm run build:source && npm run build:next",
    "build:source": "tsc",
    "build:webview": "tsc -p ./tsconfig.webview.json",
    "build:next": "next build ./src/webview",
    "start": "node -r dotenv/config ./lib/serve.js",
    "dev": "nodemon -x ts-node -w src -i src/webview -r dotenv/config -e 'ts tsx' ./src/serve.ts"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --quiet"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@machinat/auth": "0.4.1-alpha.1",
    "@machinat/core": "0.4.1-alpha.2",
    "@machinat/dialogflow": "0.4.1-alpha.1",
    "@machinat/http": "0.4.1-alpha.1",
    "@machinat/line": "0.4.1-alpha.1",
    "@machinat/local-state": "0.4.1-alpha.1",
    "@machinat/messenger": "0.4.1-alpha.1",
    "@machinat/next": "0.4.1-alpha.1",
    "@machinat/redis-state": "0.4.1-alpha.1",
    "@machinat/script": "0.4.1-alpha.1",
    "@machinat/stream": "0.4.1-alpha.1",
    "@machinat/telegram": "0.4.1-alpha.1",
    "@machinat/webview": "0.4.1-alpha.1",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "axios": "^0.21.1",
    "commander": "^2.20.0",
    "dotenv": "^8.0.0",
    "draft-js": "^0.11.7",
    "next": "^10.0.5",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.13.1",
    "rxjs": "^6.5.2",
    "styled-components": "^4.3.2",
    "symbol-observable": "^1.2.0",
    "umzug": "^3.0.0-beta.15",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "@types/react": "^16.9.52",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^4.2.5",
    "nodemon": ">=1.19.1",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
