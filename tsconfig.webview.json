{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "jsx": "react",
    "noEmit": false,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./src/webview/next.config.js",
    "./src/webview/**/*.ts",
    "./src/webview/**/*.tsx"
  ]
}
